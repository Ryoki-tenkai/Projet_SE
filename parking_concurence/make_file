# Makefile pour le syst√®me de gestion de parking

CXX = g++
CXXFLAGS = -std=c++17 -pthread -Wall -Wextra -O2
TARGET = parking_system
SRC = parking_system.cpp

all: $(TARGET)

$(TARGET): $(SRC)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(SRC)

run: $(TARGET)
	./$(TARGET)

clean:
	rm -f $(TARGET)

.PHONY: all run clean